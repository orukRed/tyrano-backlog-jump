{
	"name": "tyranoscript",
	"main": "app://./index.html",
	"window": {
		"title": "setup tyrano engine",
		"icon": "link.png",
		"toolbar": false,
		"frame": true,
		"width": 640,
		"height": 480,
		"position": "mouse",
		"min_width": 640,
		"min_height": 480
	},
	"webkit": {
		"plugin": true
	},
	"scripts": {
		"lint": "eslint --ext .js ./tyrano",
		"format": "prettier --write ./tyrano/**/*.js"
	},
	"devDependencies": {
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"prettier": "^2.7.1"
	}
}
